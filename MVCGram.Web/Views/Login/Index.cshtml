@model MVCGram.Web.Authentication.LoginModel

@{
    Layout = "_CentredCardLayout";
}

<div class="card-body">
    <h1 class="text-center">Login</h1>
    <form asp-controller="Login" asp-action="Index" method="post">
        <div class="form-group">
            <label asp-for="@Model.Username"></label>
            <input asp-for="@Model.Username" class="form-control" />
            <span asp-validation-for="@Model.Username" class="text-danger small"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Password"></label>
            <input asp-for="@Model.Password" class="form-control" />
            <span asp-validation-for="@Model.Password" class="text-danger small"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Log In</button>
        <a asp-controller="SignUp" asp-action="Index" class="d-block text-center text-secondary">
            Don't have an account? Sign up here
        </a>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}